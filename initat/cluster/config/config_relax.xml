<element name="config" xmlns="http://relaxng.org/ns/structure/1.0">
    <element name="routes">
        <oneOrMore>
            <element name="route">
                <attribute name="name"/>
                <optional>
                    <!-- set after merge -->
                    <attribute name="app"/>
                </optional>
                <element name="stateData">
                    <optional>
                        <attribute name="url"/>
                    </optional>
                    <optional>
                        <attribute name="templateUrl"/>
                    </optional>
                    <optional>
                        <attribute name="controller"/>
                    </optional>
                    <optional>
                        <attribute name="abstract_bool"/>
                    </optional>
                </element>
                <element name="icswData">
                    <optional>
                        <attribute name="pageTitle"></attribute>
                    </optional>
                    <optional>
                        <attribute name="validForQuicklink_bool">
                            <choice>
                                <value>yes</value>
                                <value>no</value>
                            </choice>
                        </attribute>
                    </optional>
                    <optional>
                        <attribute name="hasDevselFunc_bool">
                            <choice>
                                <value>yes</value>
                                <value>no</value>
                            </choice>
                        </attribute>
                    </optional>
                    <interleave>
                        <optional>
                            <element name="licenses">
                                <oneOrMore>
                                    <element name="value">
                                        <text/>
                                    </element>
                                </oneOrMore>
                            </element>
                        </optional>
                        <optional>
                            <element name="serviceTypes">
                                <oneOrMore>
                                    <element name="value">
                                        <choice><value>SERVICETYPESLIST</value></choice>
                                    </element>
                                </oneOrMore>
                            </element>
                        </optional>
                        <optional>
                            <element name="rights">
                                <oneOrMore>
                                    <element name="value">
                                        <choice><value>RIGHTSLIST</value></choice>
                                    </element>
                                </oneOrMore>
                            </element>
                        </optional>
                        <optional>
                            <element name="dashboardEntry">
                                <attribute name="sizeX_int"></attribute>
                                <attribute name="sizeY_int"></attribute>
                                <optional>
                                    <attribute name="allowState_bool">
                                        <choice>
                                            <value>yes</value>
                                            <value>no</value>
                                        </choice>
                                    </attribute>
                                </optional>
                                <optional>
                                    <attribute name="defaultEnabled_bool">
                                        <choice>
                                            <value>yes</value>
                                            <value>no</value>
                                        </choice>
                                    </attribute>
                                </optional>
                            </element>
                        </optional>
                        <optional>
                            <element name="description">
                                <oneOrMore>
                                    <element name="infoText">
                                        <attribute name="language">
                                            <choice>
                                                <value>en</value>
                                                <value>de</value>
                                            </choice>
                                        </attribute>
                                        <text/>
                                    </element>
                                </oneOrMore>
                            </element>
                        </optional>
                    </interleave>
                </element>
            </element>
        </oneOrMore>
    </element>
    <element name="menu">
        <oneOrMore>
            <element name="menuHeader">
                <attribute name="name"/>
                <optional>
                    <!-- set after merge -->
                    <attribute name="app"/>
                </optional>
                <attribute name="side">
                    <choice>
                        <value>left</value>
                        <value>right</value>
                    </choice>
                </attribute>
                <optional>
                    <attribute name="icon"></attribute>
                </optional>
                <oneOrMore>
                    <element name="routeSubGroup">
                        <attribute name="name"/>
                        <oneOrMore>
                            <element name="menuEntry">
                                <attribute name="icon"></attribute>
                                <attribute name="routeName"></attribute>
                                <attribute name="name"></attribute>
                                <optional>
                                    <attribute name="title"></attribute>
                                </optional>
                                <optional>
                                    <attribute name="entryClass"></attribute>
                                </optional>
                            </element>
                        </oneOrMore>
                    </element>
                </oneOrMore>
            </element>
        </oneOrMore>
    </element>
    <optional>
        <element name="tasks">
            <oneOrMore>
                <element name="task">
                    <attribute name="name"/>
                    <optional>
                        <!-- set after merge -->
                        <attribute name="app"/>
                    </optional>
                    <element name="description">
                        <oneOrMore>
                            <element name="infoText">
                                <attribute name="language">
                                    <choice>
                                        <value>en</value>
                                        <value>de</value>
                                    </choice>
                                </attribute>
                                <text/>
                            </element>
                        </oneOrMore>
                    </element>
                    <oneOrMore>
                        <element name="taskStep">
                            <attribute name="routeName"></attribute>
                        </element>
                    </oneOrMore>
                </element>
            </oneOrMore>
        </element>
    </optional>
</element>
