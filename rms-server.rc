### BEGIN INIT INFO
# Provides:      rms-server
# Required-Start: $network $syslog meta-server
# Should-Start: mysql postgresql
# Required-Stop: $network $syslog meta-server
# Should-Stop: mysql postgresql
# Should-Start: sgemaster
# Default-Start: 3 5
# Default-Stop: 0 1 2 6
# Description:   start rms-server service
### END INIT INFO

export SYSTEMD_NO_WRAP="1"
if [ -f /etc/rc.status ] ; then
    . /etc/rc.status
else
    . /etc/rc.status_suse
fi
. /etc/init.d/ics_tools.sh

SERVER_BIN=/opt/cluster/sbin/rms-server.py
SERVER_PID=/var/run/rms-server/rms-server.pid
PYTHON_BIN=/usr/bin/python-init
SERVER_DIRS="/var/run/rms-server"
SERVER_ARGS=""
META_FILE="/var/lib/meta-server/rms-server"

test -x ${SERVER_BIN} || exit 5
test -x ${PYTHON_BIN} || exit 5

rc_reset

# unset environment variables to be reboot-save
unset SGE_ARCH
unset SGE_ROOT
unset SGE_CELL

export HOSTNAME=`/bin/hostname`
case "$1" in
    start)
        echo -n "Starting rms-server.py"
        if [ -f ${SERVER_PID} ] ; then
            echo -n " ... already running"
        else
            for dir in $SERVER_DIRS ; do
                [ ! -d "${dir}" ] && mkdir -p ${dir}
            done
            ${SERVER_BIN} ${SERVER_ARGS}
        fi
        rc_status -v
        ;;
    stop)
        echo -n "Stopping rms-server.py"
        if [ -f ${SERVER_PID} ] ; then
            kill -s 15 `cat ${SERVER_PID} | head -n 1` || rc_failed
        else
            rc_failed
        fi
        rm -f ${SERVER_PID}
        rc_status -v
        ;;
    force-stop)
        echo -n "Force stopping rms-server.py"
        if [ -f ${SERVER_PID} ] ; then
            kill -9 `cat ${SERVER_PID} ` || rc_failed
        else
            rc_failed
        fi
        rm -f ${SERVER_PID} ${META_FILE}
        rc_status -v
        ;;
    status)
        echo -n "Checking rms-server.py..."
        check_threads_ok && {
            rc_status -v ; 
        } || {
            if ${SERVER_BIN} -C ; then
                check_threads || rc_failed 
                rc_status -v
            else
                rc_status -s
            fi
        } 
        ;;
    reload)
        echo "Reloading $(basename $SERVER_BIN)"
        if [ -f ${SERVER_PID} ] ; then
            kill -HUP `cat ${SERVER_PID} | head -n 1` || rc_failed
        else
            rc_failed
        fi
        ;;
    restart)
        echo "Restarting $(basename $SERVER_BIN)"
        $0 stop && sleep 2 ; $0 start || return=$rc_failed
        ;;
    force-restart)
        echo "Restarting $(basename $SERVER_BIN)"
        $0 force-stop && sleep 2 ; $0 start || return=$rc_failed
        ;;
        *)
        echo "Usage: $0 {start|stop|reload|status|force-stop|restart|force-restart}"
        exit 1
        ;;
esac

rc_exit


